/////////////////////////////////
// POXY X
/////////////////////////////////
poxy-x(zone, numerator_array, denominator_array, gutter_x_width, offset)
  for n in numerator_array
    for d in denominator_array
      \[class\*\={zone}{n}{d}\],
      \[class\*\={zone}{n}{d}\]._1__ ~ *,
      \[class\*\={zone}{n}{d}\]._2__ ~ * > *,
      \[class\*\={zone}{n}{d}\]._3__ ~ * > * > *,
      \[class\*\={zone}{n}{d}\]._3a__ ~ * > * > *:nth-child(1),
      \[class\*\={zone}{n}{d}\]._3b__ ~ * > * > *:nth-child(2),
      \[class\*\={zone}{n}{d}\]._3c__ ~ * > * > *:nth-child(3)
        poxy-x n/d copy_width gutter_x

poxy-x-rem(zone, numerator_array, denominator_array, gutter_x_width, offset)
  for n in numerator_array
    for d in denominator_array
      \[class\*\={zone}{n}{d}\],
      \[class\*\={zone}{n}{d}\]._1__ ~ *,
      \[class\*\={zone}{n}{d}\]._2__ ~ * > *,
      \[class\*\={zone}{n}{d}\]._3__ ~ * > * > *,
      \[class\*\={zone}{n}{d}\]._3a__ ~ * > * > *:nth-child(1),
      \[class\*\={zone}{n}{d}\]._3b__ ~ * > * > *:nth-child(2),
      \[class\*\={zone}{n}{d}\]._3c__ ~ * > * > *:nth-child(3)
        poxy-x-rem n/d copy_width gutter_x
