/////////////////////////////////
// POXY STYLES
/////////////////////////////////
poxy-y(zone, numerator_array, denominator_array, gutter_x_width, offset)
  for n in numerator_range
    for d in denominator_range
      \[class\*\={zone}\_{n}{d}\],
      \[class\*\={zone}\_{n}{d}\]._1__ ~ *,
      \[class\*\={zone}\_{n}{d}\]._2__ ~ * > *,
      \[class\*\={zone}\_{n}{d}\]._3__ ~ * > * > *,
      \[class\*\={zone}\_{n}{d}\]._3a__ ~ * > * > *:nth-child(1),
      \[class\*\={zone}\_{n}{d}\]._3b__ ~ * > * > *:nth-child(2),
      \[class\*\={zone}\_{n}{d}\]._3c__ ~ * > * > *:nth-child(3)
        poxy-y n/d copy_width gutter_x

poxy-y-rem(zone, numerator_array, denominator_array, gutter_x_width, offset)
  for n in numerator_range
    for d in denominator_range
      \[class\*\={zone}\_{n}{d}\],
      \[class\*\={zone}\_{n}{d}\]._1__ ~ *,
      \[class\*\={zone}\_{n}{d}\]._2__ ~ * > *,
      \[class\*\={zone}\_{n}{d}\]._3__ ~ * > * > *,
      \[class\*\={zone}\_{n}{d}\]._3a__ ~ * > * > *:nth-child(1),
      \[class\*\={zone}\_{n}{d}\]._3b__ ~ * > * > *:nth-child(2),
      \[class\*\={zone}\_{n}{d}\]._3c__ ~ * > * > *:nth-child(3)
        poxy-y-rem n/d copy_width gutter_x
